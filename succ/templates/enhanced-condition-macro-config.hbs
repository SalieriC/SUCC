<div data-condition-id="{{condition.id}}">
    <h4>{{localize condition.name}} - {{localize "succ.ENHANCED_CONDITIONS.MacroConfig.Heading"}}</h4>
    <p class="notes">{{localize "succ.ENHANCED_CONDITIONS.MacroConfig.Description"}}</p>
    <div class="flexrow">
        <div class="form-group">
            <label for="macro-select-apply">{{localize "succ.ENHANCED_CONDITIONS.MacroConfig.ApplyHeading"}}</label>
            <select name="macro-select-apply" class="macro-select">
                <option value="">{{localize "succ.ENHANCED_CONDITIONS.MacroConfig.SelectNone"}}</option>
                {{selectOptions macroChoices selected=applyMacroId valueAttr="id" labelAttr="name" localize=true}}
            </select>
        </div>
    </div>
    <hr/>
    <div class="flexrow">
        <div class="form-group">
            <label for="macro-select-remove">{{localize "succ.ENHANCED_CONDITIONS.MacroConfig.RemoveHeading"}}</label>
            <select name="macro-select-remove" class="macro-select">
                <option value="">{{localize "succ.ENHANCED_CONDITIONS.MacroConfig.SelectNone"}}</option>
                {{selectOptions macroChoices selected=removeMacroId valueAttr="id" labelAttr="name" localize=true}}
            </select>
        </div>
    </div>
    <br/>
    <div class="footer flexrow">
        <button name="save" class="save" type="submit">
            <i class="fas fa-save"></i>&nbsp;{{localize "succ.WORDS.Save"}}
        </button>
    </div>
</div>